<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<!-- 该配置文件用来描述Java中实体对象和数据表的映射关系 -->
<hibernate-mapping>
	<!-- class用来配置实体与表的关系 -->
	<!-- name表示实体类的完整路径 -->
	<!-- table表示数据表的名称 -->
	<class name="com.niit.pojo.Ware" table="ware">
		<!-- 配置主键 -->
		<!-- name表示实体对象中用以映射主键的属性 -->
		<id name="id">
			<!-- column name表示数据表中的主键列 -->
			<column name="wareId"></column>
		</id>
		<!-- 配置数据表中其他字段的映射 -->
		<property name="wareName" >
			<column name="wareName"></column>
		</property>
		<property name="price">
			<column name="price"></column>
		</property>
		<property name="num">
			<column name="num"></column>
		</property>
	</class>
</hibernate-mapping>
